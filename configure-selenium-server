---
- hosts: selenium-server
  become: true
  tasks:

  - name: clone selenium test repo for insure me
    command: git clone 'https://github.com/ShaktiHazaru/insureme-selenium.git'

  - name: build & package
    command: mvn clean package assembly:single

  - name: run the jar
    command: java -jar target/insureme-selenium-0.0.1-SNAPSHOT-jar-with-dependencies.jar
